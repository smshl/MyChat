@model DataViewModel<List<User>>
@{
    ViewData["Title"] = "لیست کاربران";
    int counter = 1;
}

<h1>@ViewData["Title"]</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Succeded)
        {
            @foreach (var user in Model.Data)
            {
                <tr>
                    <th scope="row">@(counter++)</th>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>Online</td>
                    <td>
                        <a class="btn btn-primary" href="~/user/chat/@(user.Id)">Start Chat!</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <h3 class="text text-danger">@Model.Message</h3>
        }
    </tbody>
</table>

